<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Manual Mode</title>
  <link rel="stylesheet" href="../../assets/styles-measure.css">
</head>

<body>

<header>
  <h2>Tree Measurement — Manual Mode</h2>

  <nav>
    <a href="../measurement-angle/angle.html">Angle Mode</a>
    <a href="../measurement-photo/photo.html">Photo Mode</a>
    <a href="../measurement.html">Measurement Hub</a>
    <a href="../../index.html">Home</a>
  </nav>
</header>

<section class="card">
  <h3>Manual Entry</h3>

  <label>Tree Height (meters):</label>
  <input id="manualHeight" type="number" step="0.01">

  <label>Tree Thickness (meters):</label>
  <input id="manualThickness" type="number" step="0.01">

  <button id="saveManualBtn">Save</button>

  <p style="margin-top:20px; font-size:1.3rem;">
    Height: <span id="manualHeightOut">–</span>
  </p>

  <p style="font-size:1.3rem;">
    Thickness: <span id="manualThicknessOut">–</span>
  </p>
</section>

<script>
  const manualHeight = document.getElementById("manualHeight");
  const manualThickness = document.getElementById("manualThickness");
  const manualHeightOut = document.getElementById("manualHeightOut");
  const manualThicknessOut = document.getElementById("manualThicknessOut");
  const saveManualBtn = document.getElementById("saveManualBtn");

  saveManualBtn.onclick = () => {
    const h = parseFloat(manualHeight.value);
    const t = parseFloat(manualThickness.value);

    manualHeightOut.textContent = h > 0 ? h.toFixed(2) + " m" : "–";
    manualThicknessOut.textContent = t > 0 ? t.toFixed(2) + " m" : "–";
  };
</script>

</body>
</html>
